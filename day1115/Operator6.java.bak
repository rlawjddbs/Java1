class Operator6{
	public static void main(String[] args) {
		int i = 11;
		i = -1;
		System.out.println(i+"는(은) "+ (i>=0?"양수":"음수"));

		//절대값을 구하는 삼항연산자
		System.out.println(i+"의 절대값 "+ ( i>=0 ? i : -i ));

		//tilde를 사용하여 입력된 값이 음수일 경우 양수로, 양수일 경우 음수로 표현해보기
		int j = 10;
		System.out.println(j>=0 ? ~j+1 : ~j+1); 

		//변수의 값이 짝수인지 홀수인지 판단하는 삼항연산자
		int k = 15;
		System.out.println(k%2=1 ? "홀수" : "짝수");

	}//main
}//class
